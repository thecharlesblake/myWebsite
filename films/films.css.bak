td {
    white-space: nowrap;
}

#header {
    background: #3b5998;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    margin-bottom: 16px;
}

#header h1 {
    display: inline-block;
    font-family: 'Julius Sans One', sans-serif;
    margin-top: 3px;
    color: white;
    padding: 5px;
    padding-left: 5%;
    margin-bottom: 0px;
}

#header #movie_table_filter {
    color: white;
    padding-top: 13px;
    padding-right: 5%;
    float: right;
    display: inline-block;
}

#header #movie_table_filter label .form-control {
    width: inherit;
    display: inline-block;
    height: 28px;
    padding-bottom: 3px;
    padding-top: 3px;
    padding-left: 10px;
    padding-right: 10px;
	margin-left: 7px;
}

#main {
    max-height: 100vh;
    display: none;
}

.pre-outer {
    margin: 0;
    display: table;
    position: absolute;
    height: 100vh;
    width: 100vw;
}
.pre-inner {
    font-family: 'Julius Sans One', sans-serif;
    font-size: 60px;
    background: #fff;

    text-align: center;
    display: table-cell;
    vertical-align: middle;
}

#movie_outer {
    /* Firefox */
    height: -moz-calc(100% - 68px);
    max-height: -moz-calc(100% - 68px);
    /* WebKit */
    height: -webkit-calc(100% - 68px);
    max-height: -webkit-calc(100% - 68px);
    /* Opera */
    height: -o-calc(100% - 68px);
    max-height: -o-calc(100% - 68px);
    /* Standard */
    height: calc(100% - 68px);
    max-height: calc(100% - 68px);
}

#movie_inner {
    width: 100%;
    height: 100%;
    padding-left: 5%;
    padding-right: 5%;
    padding-bottom: 2%;
}

@media (max-width:750px) {
    #header {
        margin-bottom: 23px;
    }
    #header h1 {
        font-size: 30px;
    }
    #movie_outer {
        height: 600px;
        max-height: 600px;
    }
    #movie_inner {
        padding-left: 0px;
        padding-right: 0px;
        font-size: small;
    }
    #movie_table {
        font-size: small;
    }
    #movie_table_filter label {
        float: left;
        margin-left: 13px;
    }
    .pre-inner {
        font-size: 35px;
    }
}
